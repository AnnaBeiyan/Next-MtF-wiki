{
  "name": "next-mtf-wiki",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "npm run copy-assets",
    "build": "turbo run build:pages",
    "dev": "turbo run dev",
    "preview": "turbo run preview",
    "deploy": "npm run build && pnpm --filter=@next-mtf-wiki/wiki run deploy",
    "copy-assets": "node scripts/copy-non-md-files.js",
    "cleanup": "rm -rf apps/wiki/.next && rm -rf .turbo"
  },
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "turbo": "^2.5.4"
  }
}
